<Window xmlns:UserControls="clr-namespace:ProjectLAB.UserControls;assembly=ProjectLAB.UserControls"  x:Class="ProjectLAB.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLAB.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border Padding="10">
            <!--buttons-->
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" x:Name="Image"/>
                    <UserControls:ImageProcessor Grid.Column="1" x:Name="ImageProcessorCtrl"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
